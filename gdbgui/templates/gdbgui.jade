body
    div.container-fluid
        div.row(style="height: 70px;")
            h4#status GDB is running on the backend. Choose a binary to debug.

        div.row
            div.col-md-6
                form(role=form)
                    div.input-group.input-group-sm
                        span.input-group-btn
                            button.btn.btn-primary#set_target_app(type="button") Debug This Binary
                        input.form-control#binary(type="text", placeholder="Path to target executable")
                //- premade button
                div.btn-group.btn-group-xs(role="group")
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='run', title='Run the loaded program') Run
                        span.glyphicon.glyphicon-off.padding_left
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='continue', title='Continue running program') Continue
                        span.glyphicon.glyphicon-play.padding_left
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='next', title='Step to next line (will not enter function)') Next
                        span.glyphicon.glyphicon-step-forward.padding_left
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='step', title='Step into next function call or to next line') Step
                        span.glyphicon.glyphicon-arrow-down.padding_left
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='return', title='Return to calling function') Return
                        span.glyphicon.glyphicon-arrow-up.padding_left
                    button.btn.btn-default.gdb_cmd(type='button', data-cmd='-break-insert main', title="Add breakpoint to the programs entry point") Add Breakpoint to Main
                        span.glyphicon.glyphicon-flag.padding_left
                    button.btn.btn-default.gdb_cmd(type="button", data-cmd='interrupt') Kill Target
                        span.glyphicon.glyphicon-ban-circle.padding_left

                //- freeform input
                form(role=form)
                    div.input-group.input-group-sm
                        span.input-group-btn
                            button.btn.btn-success.run_gdb_command(type="button") Send command
                        input.form-control.dropdown-input#gdb_command(type="text", placeholder="gdb command", autocomplete="on", list="gdb_command_reference")
            //- history -- should
            div.col-md-6(style="overflow: auto; height: 100px; ")
                table.table.table-condensed(style="padding: 0; font-size: 0.8em")
                    tbody#commands_sent(style="padding: 0")

        //- console
        div.panel.panel-default
            div.panel-heading gdb console
            div.panel-body#console(style="overflow: auto; height: 150px; background-color: #f7f7f7")


        //- source
        div.panel.panel-default
            div.panel-heading#source_code_heading Source Code
            div.panel-body.code_container(style="overflow: auto; height: 150px; background-color: #f7f7f7")
                table#code_table.code
                    tr
                        td Source code will be displayed here when applicable

        //- breakpoints
        div.panel.panel-default
            div.panel-heading Breakpoints
                button.btn.btn-default.btn-xs.gdb_cmd(type='button', data-cmd='-break-list', title="Get table of all breakpoints") Refresh
                    span.glyphicon.glyphicon-refresh.padding_left

            div.panel-body#breakpoints(style="overflow: auto; height: 150px; background-color: #f7f7f7")

        //- stdout
        div.panel.panel-default
            div.panel-heading stdout/stderr
                    button.btn.btn-default.btn-xs.gdb_cmd(type='button', data-cmd='call fflush(0)') Flush GDB Child Process Output
            div.panel-body#stdout(style="overflow: auto; height: 150px; background-color: #f7f7f7")


        //- //- raw output (delete?)
        //- div.panel.panel-default
        //-     div.panel-heading gdb raw output
        //-     div.panel-body#raw_output(style="overflow: auto; height: 150px; font-size: 0.8em")


